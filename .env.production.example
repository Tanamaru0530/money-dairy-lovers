# === 本番環境設定の例 ===
# このファイルをコピーして .env.production を作成してください
# cp .env.production.example .env.production

# === 環境 ===
ENVIRONMENT=production

# === データベース ===
# 強力なパスワードに変更してください
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@db:5432/money_dairy_lovers
DATABASE_URL_TEST=postgresql://postgres:CHANGE_THIS_PASSWORD@db:5432/money_dairy_lovers_test

# === セキュリティ ===
# 必ず32文字以上のランダムな文字列に変更してください
# openssl rand -base64 32 で生成できます
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# === メール設定 ===
SMTP_TLS=True
SMTP_PORT=587
# Gmail の場合
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
# Gmailアプリパスワード（16文字）を設定
# https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@money-dairy-lovers.com
EMAILS_FROM_NAME=Money Dairy Lovers

# === URL設定 ===
# あなたのサーバーのIPアドレスに変更してください
BACKEND_URL=http://YOUR_SERVER_IP:8000
FRONTEND_URL=http://YOUR_SERVER_IP:3000

# === CORS設定 ===
# アクセスを許可するオリジンを設定
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://YOUR_SERVER_IP:3000,http://YOUR_SERVER_IP:8000

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === ファイルアップロード ===
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# === Love機能 ===
ENABLE_LOVE_ANALYTICS=true
DEFAULT_LOVE_CATEGORIES=デート代,プレゼント,記念日